
replicas: 2

logstashPipeline: 
  logstash.conf: |
    input {
      kafka {
        bootstrap_servers => "kafka:9092"
        topics => ["json", "out", "test"]
        codec => "json"
      }
    }
    output { 
      elasticsearch {
        hosts => ["elastic-cluster-client:9200"]
        index => "%{[fields][type]}-%{+YYYY.MM.dd}"
      }
    }

